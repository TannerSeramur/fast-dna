{
  "name": "@microsoft/fast-components-styles-msft",
  "description": "Javascript style sheets for FAST components",
  "sideEffects": false,
  "version": "3.6.0",
  "author": {
    "name": "Microsoft",
    "url": "https://discord.gg/FcSNfg4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/fast-dna/issues/new/choose"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean:dist": "node ../../build/clean.js dist",
    "tslint": "tslint -c ./tslint.json '**/*.ts'",
    "tslint:fix": "tslint -c ./tslint.json --fix '**/*.ts'",
    "test": "npm run tslint",
    "build": "tsc -p ./tsconfig.json",
    "build:watch": "npm run build -- -w",
    "prepare": "npm run clean:dist && npm run build",
    "prettier": "prettier --config ../../.prettierrc --write \"**/*.ts\"",
    "prettier:diff": "prettier --config ../../.prettierrc \"**/*.ts\" --list-different",
    "watch": "npm run build -- -w --preserveWatchOutput"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@microsoft/fast-application-utilities": "^3.0.4",
    "@microsoft/fast-tslint-rules": "^3.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "chroma-js": "^1.3.0",
    "jest": "^23.6.0",
    "lodash-es": "^4.0.0",
    "prettier": "1.14.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 90,
        "functions": 95,
        "lines": 95
      }
    },
    "coveragePathIgnorePatterns": [
      "/.tmp/*"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "!<rootDir>/node_modules/lodash-es"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "dependencies": {
    "@microsoft/fast-components-class-name-contracts-base": "^3.5.0",
    "@microsoft/fast-components-class-name-contracts-msft": "^3.4.0",
    "@microsoft/fast-jss-manager": "^3.0.8",
    "@microsoft/fast-jss-utilities": "^3.0.8",
    "@microsoft/fast-web-utilities": "^3.0.4"
  },
  "peerDependencies": {
    "@microsoft/fast-application-utilities": "^3.0.0",
    "chroma-js": "^1.3.0",
    "lodash-es": "^4.0.0"
  }
}
